@model FlightSearchViewModel
@inject IAirportsService AirportsService
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    List<Airport> airports = AirportsService.GetAllAirports().ToList();
}
<form name="flightSearch">
    <div class="container">
        <div class="row">
            <div class="col">
                @Html.LabelFor(m => m.IsReturnFlight)
                @Html.EditorFor(m => m.IsReturnFlight)
            </div>
            <div class="col">
                <label>Departure Airport</label>
                <select>
                    @{
                        foreach (Airport airport in airports)
                        {
                            <option value="@airport.Id">@airport.Name.ToString()</option>
                        }
                    }
                </select>
            </div>
            <div class="col">
                <label>Arrival Airport</label>
                <select>
                    @{
                        foreach (Airport airport in airports)
                        {
                            <option value="@airport.Id">@airport.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>
</form>